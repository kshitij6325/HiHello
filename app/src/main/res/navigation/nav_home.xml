<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/auth_nav">

    <include app:graph="@navigation/auth_nav" />
    <include app:graph="@navigation/chat_nav" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.hihello.home.homefragment.HomeFragment"
        android:label="fragment_home2"
        tools:layout="@layout/fragment_home">
        <deepLink app:uri="@string/home_frag_deeplink_string" />
        <action
            android:id="@+id/action_homeFragment_to_auth_nav"
            app:destination="@id/auth_nav"
            app:popUpToInclusive="true" />
    </fragment>

    <action
        android:id="@+id/action_chat_nav_graph"
        app:destination="@id/chat_nav" />

    <action
        android:id="@+id/action_nav_graph"
        app:destination="@id/auth_nav" />

</navigation>